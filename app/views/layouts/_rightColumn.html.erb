<% if user_signed_in? %>
  <%= gravatar_for current_user, options = {:size => 100} %>
  <!-- Сделать только имя, а не почту, вместо имени -->
  <%= current_user.full_name%>
  Relationships:</br>
  <% @users = current_user.followers %>
  <a href='/followers'><%= pluralize( @users.count, "Reader") %></a></br>

  <% @users = current_user.following %>
  <a href='/following'><%= pluralize(@users.count, "Friend") %></a>

<% end %>


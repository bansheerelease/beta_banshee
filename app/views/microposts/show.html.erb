
<% if @user == current_user%>

    <center><br><%= render 'micropost_form' %></center>
<% else %>
    <% if !@user.nil? %>
      <%= render 'relationships/follow_form' %>
    <% end %>
<% end %>

<% if !@microposts.empty? %>
    <table class="microposts" summary="User microposts">
      <%= render @microposts %>
    </table>
<% end %>
<center><%= paginate @microposts %></center>


<% if !user_signed_in? %>
<%= link_to "Sign up now!", new_user_registration_path, :class => "signup_button round" %>
<% else %>

  <%= image_tag current_user.avatar.url(:medium) %> </br>
  <%= current_user.full_name%> </br>
  <% @users = current_user.followers %>
  <%= pluralize( @users.count, "Reader") %></br>
  <% @users = current_user.following %>
  <%= pluralize( @users.count, "Friend") %></br>
  <% @microposts = current_user.microposts%>
  <%= pluralize( @microposts.count, "Micropost") %></br>
<% end %>

